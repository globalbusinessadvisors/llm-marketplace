{
  "name": "@llm-dev-ops/e2e-tests",
  "version": "1.1.0",
  "description": "End-to-end tests for LLM-Marketplace platform",
  "private": true,
  "scripts": {
    "build": "echo 'E2E tests do not require a build step'",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --runInBand --coverage --maxWorkers=2",
    "test:workflow": "jest --testPathPattern=workflows",
    "test:publishing": "jest --testPathPattern=publishing",
    "test:discovery": "jest --testPathPattern=discovery",
    "test:consumption": "jest --testPathPattern=consumption",
    "test:auth": "jest --testPathPattern=auth",
    "test:approval": "jest --testPathPattern=approval",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "env:setup": "docker-compose -f docker-compose.test.yml up -d",
    "env:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "env:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "pretest": "npm run env:setup && sleep 30",
    "posttest": "npm run env:teardown"
  },
  "keywords": [
    "e2e",
    "testing",
    "llm-marketplace"
  ],
  "author": "LLM-Marketplace Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "uuid": "^9.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/workflows"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "workflows/**/*.ts",
      "utils/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest.setup.ts"
    ],
    "testTimeout": 60000,
    "maxWorkers": 1,
    "verbose": true
  }
}
